<h1>Listing books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Authors</th>
    <th>Publisher</th>
    <th>Published date</th>
    <th>Description</th>
    <th>Isbn</th>
    <th>Isbn 10</th>
    <th>Isbn 13</th>
    <th>Page count</th>
    <th>Print type</th>
    <th>Average rating</th>
    <th>Language</th>
    <th>Preview link</th>
    <th>Info link</th>
    <th>Image link</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.authors %></td>
    <td><%= book.publisher %></td>
    <td><%= book.published_date %></td>
    <td><%= book.description %></td>
    <td><%= book.isbn %></td>
    <td><%= book.isbn_10 %></td>
    <td><%= book.isbn_13 %></td>
    <td><%= book.page_count %></td>
    <td><%= book.print_type %></td>
    <td><%= book.average_rating %></td>
    <td><%= book.language %></td>
    <td><%= book.preview_link %></td>
    <td><%= book.info_link %></td>
    <td><%= book.image_link %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

